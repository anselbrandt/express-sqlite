{
  "name": "express-sqlite",
  "version": "1.0.0",
  "engines": {
    "node": "16.x"
  },
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "copy": "mkdir -p dist/public && cp ./public/*.* ./dist/public/",
    "build": "yarn clean && yarn copy && tsc",
    "watch": "yarn clean && yarn copy && tsc -w",
    "dev": "nodemon dist/src/index.js",
    "start": "node dist/src/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "sqlite": "^4.1.1",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.38",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.2"
  }
}
